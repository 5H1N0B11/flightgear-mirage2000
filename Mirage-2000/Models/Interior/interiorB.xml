<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>interiorB.ac</path>

  <animation>

    <!-- Objets opaques -->
    <object-name>interieur-BIPLACE</object-name>
    <object-name>intcanopyAvant-BIPLACE</object-name>
    <object-name>intcanopyArriere-BIPLACE</object-name>
    <object-name>attachesAvant-BIPLACE</object-name>
    <object-name>poigneesAvant-BIPLACE</object-name>
    <object-name>attachesArriere-BIPLACE</object-name>
    <object-name>poigneesArriere-BIPLACE</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitres-BIPLACE</object-name>
    <object-name>intverriereAvant-BIPLACE</object-name>
    <object-name>intverriereArriere-BIPLACE</object-name>

  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Effects/glass</inherits-from>
    <object-name>intvitres</object-name>
    <object-name>intvitres-BIPLACE</object-name>
    <object-name>intverriereAvant-BIPLACE</object-name>
    <object-name>intverriereArriere-BIPLACE</object-name>
  </effect>
  
  <!--animation>
    <type>select</type>
    <object-name>intvitres</object-name>
    <object-name>intvitres-BIPLACE</object-name>
    <object-name>intverriereAvant-BIPLACE</object-name>
    <object-name>intverriereArriere-BIPLACE</object-name>
    <condition>
      <less-than>
        <property>/environment/rain-norm</property>
        <value>0.1</value>
      </less-than>
    </condition>
  </animation>
  <model>
    <path>Aircraft/Mirage-2000/Models/Effects/RainDrops/rainglass.xml</path>
    <condition>
      <greater-than>
        <property>/environment/rain-norm</property>
        <value>0.1</value>
      </greater-than>
    </condition>
  </model-->


  <model>
    <name>Stick</name>
    <path>Aircraft/Mirage-2000/Models/Interior/stick/stick.xml</path>
    <offsets>
      <x-m> -3.0 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.65 </z-m>
    </offsets>
  </model>


  <!-- Tableau de bord pilote -->
  <model>
    <name>Panel</name>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.653 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.297 </z-m>
      <pitch-deg> -14 </pitch-deg>
    </offsets>
  </model>
  <!-- Tableau de bord copilote -->
  <model>
    <name>Panel_Back</name>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/panel_back.xml</path>
    <offsets>
      <x-m> -2 </x-m>
      <y-m>  0.0 </y-m>
      <z-m> -0.1 </z-m>
      <pitch-deg> -14 </pitch-deg>
    </offsets>
  </model>

  <!-- left part pilote -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/Left-Panel/left.xml</path>
    <offsets>
      <x-m> -3.105 </x-m>
      <y-m> -0.281 </y-m>
      <z-m> -0.503 </z-m>
    </offsets>
  </model>
  <!-- left part copilote -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/Left-Panel/left.xml</path>
    <offsets>
      <x-m> -1.478 </x-m>
      <y-m> -0.268 </y-m>
      <z-m> -0.390 </z-m>
      <heading-deg> 2 </heading-deg>
    </offsets>
  </model>

  <!-- right part pilote -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/Right-Panel/right.xml</path>
    <offsets>
      <x-m> -3.105 </x-m>
      <y-m>  0.281 </y-m>
      <z-m> -0.503 </z-m>
    </offsets>
  </model>
  <!-- right part copilote -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/Right-Panel/right.xml</path>
    <offsets>
      <x-m> -1.478 </x-m>
      <y-m>  0.268 </y-m>
      <z-m> -0.390 </z-m>
      <heading-deg> -2 </heading-deg>
    </offsets>
  </model>

  <!-- Retro -->
  <model>
    <name>Retroviseur</name>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/Instruments/Retro/retro.xml</path>
    <offsets>
      <x-m> -3.28 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.2 </z-m>
    </offsets>
  </model>

  <!-- Manette pilote -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/Instruments/manette/manette.xml</path>
    <offsets>
      <x-m> -3.070 </x-m>
      <y-m>  0.364 </y-m>
      <z-m> -0.350 </z-m>
      <roll-deg>     5 </roll-deg>
      <heading-deg> 10 </heading-deg>
    </offsets>
  </model>
  <!-- Manette copilote -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/Instruments/manette/manette.xml</path>
    <offsets>
      <x-m> -1.400 </x-m>
      <y-m>  0.320 </y-m>
      <z-m> -0.150 </z-m>
      <roll-deg>     5 </roll-deg>
      <heading-deg> 10 </heading-deg>
    </offsets>
  </model>

  <!-- Loquet -->
  <model>
    <name>LeLoquet</name>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/Instruments/loquet/loquet.xml</path>
    <offsets>
      <x-m> -3.323 </x-m>
      <y-m>  0.122 </y-m>
      <z-m>  0.153 </z-m>
      <pitch-deg>   -25 </pitch-deg>
      <roll-deg>    -30 </roll-deg>
      <heading-deg> -15 </heading-deg>
    </offsets>
  </model>

  <!-- pilot -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Pilot/pilot.xml</path>
    <condition>
      <or>
        <and>
          <equals>
            <property>/controls/seat/pilot</property>
            <value>1</value>
          </equals>
          <equals>
            <property>/sim/current-view/view-number</property>
            <value>0</value>
          </equals>
        </and>
        <not>
          <equals>
            <property>/sim/current-view/view-number</property>
            <value>0</value>
          </equals>
        </not>
      </or>
    </condition>
    <offsets>
      <x-m> -2.518 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.464 </z-m>
    </offsets>
  </model>
  <!-- copilot -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Pilot/pilot.xml</path>
    <condition>
      <or>
        <and>
          <equals>
            <property>/controls/seat/pilot</property>
            <value>1</value>
          </equals>
          <equals>
            <property>/sim/current-view/view-number</property>
            <value>11</value>
          </equals>
        </and>
        <not>
          <equals>
            <property>/sim/current-view/view-number</property>
            <value>11</value>
          </equals>
        </not>
      </or>
    </condition>
    <offsets>
      <x-m> -0.971 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.276 </z-m>
    </offsets>
  </model>

  <!-- Seat pilot -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Interior/seat/seat.xml</path>
    <offsets>
      <x-m> -2.555 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.502 </z-m>
    </offsets>
  </model>
  <!-- Seat copilot -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Interior/seat/seat.xml</path>
    <offsets>
      <x-m> -0.971 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.276 </z-m>
    </offsets>
  </model>

  <!-- Canopy pilot-->
  <animation>
    <name>IntEnsembleCanopeAvant</name>
    <object-name>intcanopyAvant-BIPLACE</object-name>
    <object-name>intverriereAvant-BIPLACE</object-name>
    <object-name>attachesAvant-BIPLACE</object-name>
    <object-name>Retroviseur</object-name>
    <object-name>poigneesAvant-BIPLACE</object-name>
    <object-name>LeLoquet</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>poigneesAvant-BIPLACE</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.move_canopy_byHand();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntEnsembleCanopeAvant</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind>0</ind><dep> 0</dep></entry>
      <entry><ind>1</ind><dep>45</dep></entry>
    </interpolation>
    <center>
      <x-m>-1.8695</x-m>
      <y-m>  0.000 </y-m>
      <z-m>0.481605</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Canopy copilot-->
  <animation>
    <name>IntEnsembleCanopeArriere</name>
    <object-name>intcanopyArriere-BIPLACE</object-name>
    <object-name>intverriereArriere-BIPLACE</object-name>
    <object-name>attachesArriere-BIPLACE</object-name>
    <object-name>poigneesArriere-BIPLACE</object-name>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>poigneesArriere-BIPLACE</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>nasal</command>
        <script>doors.move_canopy_byHand();</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntEnsembleCanopeArriere</object-name>
    <property>sim/model/door-positions/crew/position-norm</property>
    <interpolation>
      <entry><ind>0</ind><dep> 0</dep></entry>
      <entry><ind>1</ind><dep>55</dep></entry>
    </interpolation>
    <center>
      <x-m>-0.435658</x-m>
      <y-m>  0.000 </y-m>
      <z-m>0.48736</z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- LoD -->
  <animation>
    <object-name>Panel</object-name>
    <object-name>Panel_Back</object-name>
    <type>range</type>
    <min-m>  0 </min-m>
    <max-m> 100 </max-m>
  </animation>

</PropertyList>
