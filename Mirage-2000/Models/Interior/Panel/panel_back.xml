<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>panel_back.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>back_panel</object-name>

    <!-- Objets transparents -->

  </animation>

  <!-- LIGHTS -->
  <!--Light Top LEFT -->
  <model>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/Instruments/Lights/lights.xml</path>
    <offsets>
      <x-m>  0.50719 </x-m>
      <y-m> -0.20777 </y-m>
      <z-m>  0.03983 </z-m>
      <roll-deg> 41.51 </roll-deg>
    </offsets>
  </model>

  <!-- Effect Top Left-->
  <model>
    <path>Aircraft/Mirage-2000/Models/Interior/Panel/Instruments/Lights/Light-EffectUp.xml</path>
    <name>EffectTopLeft</name>
    <offsets>
      <x-m>  0.50719 </x-m>
      <y-m> -0.20777 </y-m>
      <z-m>  0.03983 </z-m>
      <pitch-deg>93</pitch-deg>
      <heading-deg>5</heading-deg>
    </offsets>
  </model>

  <animation>
    <type>select</type>
    <object-name>EffectTopLeft</object-name>
    <condition>
      <and>
        <property>sim/rendering/rembrandt/enabled</property>
        <not>
          <equals>
            <property>/systems/electrical/outputs/boardLightUV</property>
            <value>0</value>
          </equals>
        </not>
      </and>
    </condition>
  </animation>

  <!--Light Top RIGHT -->
