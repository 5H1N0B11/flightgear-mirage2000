<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>surf-indic.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>cadre</object-name>
    <object-name>vis</object-name>
    <object-name>rep-airbrake</object-name>
    <object-name>rep-slats</object-name>
    <object-name>text1</object-name>
    <object-name>text2</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <object-name>rep-airbrake</object-name>
    <object-name>rep-slats</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
    <ambient>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </ambient>
    <diffuse>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </diffuse>
    <specular>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </specular>
  </animation>

  <animation>
    <type>material</type>
    <object-name>cadre</object-name>
    <object-name>vis</object-name>
    <object-name>text1</object-name>
    <object-name>text2</object-name>
    <condition>
      <not>
        <property>sim/rendering/rembrandt/enabled</property>
      </not>
    </condition>
    <emission>
      <red>   0.13 </red>
      <green> 0.13 </green>
      <blue>  0.13 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>cadre</object-name>
    <object-name>vis</object-name>
    <object-name>text1</object-name>
    <object-name>text2</object-name>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <emission>
      <red>   0.05 </red>
      <green> 0.05 </green>
      <blue>  0.05 </blue>
    </emission>
  </animation>

  <!--Airbrakes-->
  <animation>
    <type>translate</type>
    <object-name>rep-airbrake</object-name>
    <property>surface-positions/spoiler-pos-norm</property>
    <interpolation>
      <entry><ind>0.00</ind><dep>0.0000</dep></entry>
      <entry><ind>0.25</ind><dep>0.0077</dep></entry>
      <entry><ind>0.50</ind><dep>0.0210</dep></entry>
      <entry><ind>0.75</ind><dep>0.0345</dep></entry>
      <entry><ind>1.00</ind><dep>0.0480</dep></entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>rep-airbrake</object-name>
    <property>surface-positions/spoiler-pos-norm</property>
    <interpolation>
      <entry><ind>0</ind><dep>0.0000</dep></entry>
      <entry><ind>1</ind><dep>0.0006</dep></entry>
    </interpolation>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!--Slats-->
  <animation>
    <type>translate</type>
    <object-name>rep-slats</object-name>
    <property>surface-positions/slat-pos-norm</property>
    <interpolation>
      <entry><ind>0.000</ind><dep>0.000</dep></entry>
      <entry><ind>0.333</ind><dep>0.012</dep></entry>
      <entry><ind>0.666</ind><dep>0.030</dep></entry>
      <entry><ind>1.000</ind><dep>0.048</dep></entry>
    </interpolation>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>rep-slats</object-name>
    <property>surface-positions/slat-pos-norm</property>
    <interpolation>
      <entry><ind>0</ind><dep>0.00000</dep></entry>
      <entry><ind>1</ind><dep>0.00047</dep></entry>
    </interpolation>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <!--
================================================================================
                                                                        TEXT OSG
================================================================================
  -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Surface indicator</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.016</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>.02</x-m>
      <y-m>.035</y-m>
      <z-m>0</z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>1</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
  </animation>
  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>
</PropertyList>
