<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <model>
    <name>MyRadar</name>
    <path>mfd.xml</path>
    <condition>
      <greater-than>
        <property>/systems/electrical/outputs/radar</property>
        <value>24</value>
      </greater-than>
    </condition>
    <offsets>
      <x-m>0.001</x-m>
      <y-m>-0.001</y-m>
      <z-m>-0.0011</z-m>
    </offsets>
  </model>

  <animation>
    <type>scale</type>
    <object-name>MyRadar</object-name>
    <x-offset>0.50</x-offset>
    <y-offset>1.10</y-offset>
    <z-offset>0.74</z-offset>
  </animation>

  <model>
    <path>radar.ac</path>
  </model>

  <animation>
    <!-- Objets opaques -->
    <object-name>fond</object-name>
    <object-name>ecran</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <object-name>ecran</object-name>
    <condition>
      <not>
        <property>sim/rendering/rembrandt/enabled</property>
      </not>
    </condition>
    <emission>
      <red>   0.13 </red>
      <green> 0.13 </green>
      <blue>  0.13 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <object-name>ecran</object-name>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <emission>
      <red>   0.05 </red>
      <green> 0.05 </green>
      <blue>  0.05 </blue>
    </emission>
  </animation>

</PropertyList>
