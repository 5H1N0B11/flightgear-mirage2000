<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>center-mfd.ac</path>

  <animation>
    <!-- Objets opaques -->
    <type>material</type>
    <object-name>cadre</object-name>
    <object-name>vis</object-name>
    <object-name>trim1</object-name>
    <object-name>trim2</object-name>
    <object-name>trim3</object-name>
    <object-name>bt-b1</object-name>
    <object-name>bt-b2</object-name>
    <object-name>bt-b3</object-name>
    <object-name>bt-b4</object-name>
    <object-name>bt-b5</object-name>
    <object-name>bt-h1</object-name>
    <object-name>bt-h2</object-name>
    <object-name>bt-h3</object-name>
    <object-name>bt-h4</object-name>
    <object-name>bt-h5</object-name>
    <object-name>pot-l1</object-name>
    <object-name>pot-l2</object-name>
    <object-name>pot-l3</object-name>
    <object-name>pot-l4</object-name>
    <object-name>pot-r1</object-name>
    <object-name>pot-r2</object-name>
    <object-name>pot-r3</object-name>
    <object-name>pot-r4</object-name>
    <object-name>blackbkd</object-name>
    <object-name>blackbkdOFF</object-name>

    <!-- Objets transparents -->

  </animation>

  <animation>
    <type>material</type>
    <!--object-name>cadre</object-name>
    <object-name>vis</object-name-->
    <object-name>blackbkd</object-name>
    <emission>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>cadre</object-name>
    <object-name>vis</object-name>
    <object-name>trim1</object-name>
    <object-name>trim2</object-name>
    <object-name>trim3</object-name>
    <object-name>bt-b1</object-name>
    <object-name>bt-b2</object-name>
    <object-name>bt-b3</object-name>
    <object-name>bt-b4</object-name>
    <object-name>bt-b5</object-name>
    <object-name>bt-h1</object-name>
    <object-name>bt-h2</object-name>
    <object-name>bt-h3</object-name>
    <object-name>bt-h4</object-name>
    <object-name>bt-h5</object-name>
    <object-name>pot-l1</object-name>
    <object-name>pot-l2</object-name>
    <object-name>pot-l3</object-name>
    <object-name>pot-l4</object-name>
    <object-name>pot-r1</object-name>
    <object-name>pot-r2</object-name>
    <object-name>pot-r3</object-name>
    <object-name>pot-r4</object-name>
    <condition>
      <not>
        <property>sim/rendering/rembrandt/enabled</property>
      </not>
    </condition>
    <emission>
      <red>   0.13 </red>
      <green> 0.13 </green>
      <blue>  0.13 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>cadre</object-name>
    <object-name>vis</object-name>
    <object-name>trim1</object-name>
    <object-name>trim2</object-name>
    <object-name>trim3</object-name>
    <object-name>bt-b1</object-name>
    <object-name>bt-b2</object-name>
    <object-name>bt-b3</object-name>
    <object-name>bt-b4</object-name>
    <object-name>bt-b5</object-name>
    <object-name>bt-h1</object-name>
    <object-name>bt-h2</object-name>
    <object-name>bt-h3</object-name>
    <object-name>bt-h4</object-name>
    <object-name>bt-h5</object-name>
    <object-name>pot-l1</object-name>
    <object-name>pot-l2</object-name>
    <object-name>pot-l3</object-name>
    <object-name>pot-l4</object-name>
    <object-name>pot-r1</object-name>
    <object-name>pot-r2</object-name>
    <object-name>pot-r3</object-name>
    <object-name>pot-r4</object-name>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <emission>
      <red>   0.05 </red>
      <green> 0.05 </green>
      <blue>  0.05 </blue>
    </emission>
  </animation>

  <!--######################## Change display mode  ############################-->
  <animation>
    <type>pick</type>
    <object-name>bt-b1</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <binding>
        <command>property-cycle</command>
        <property>/instrumentation/efis/mfd/display-mode</property>
        <value>APP</value>
        <value>MAP</value>
        <value>PLAN</value>
        <value>VOR</value>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>display_mode</tooltip-id>
        <label>Display type : %s</label>
        <property>/instrumentation/efis/mfd/display-mode</property>
      </binding>
    </hovered>
  </animation>

  <!--######################## Change display type  ############################-->
  <animation>
    <type>pick</type>
    <object-name>bt-b2</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <binding>
        <command>property-cycle</command>
        <property>/instrumentation/efis/mfd/display-type</property>
        <value>CRT</value>
        <value>LCD</value>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>display_type</tooltip-id>
        <label>Display type : %s</label>
        <property>/instrumentation/efis/mfd/display-type</property>
      </binding>
    </hovered>
  </animation>

  <!--######################## Center ND modes   ############################-->
  <animation>
    <type>pick</type>
    <object-name>bt-b3</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/efis/inputs/nd-centered</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>Center_ND_modes</tooltip-id>
        <label>Center ND modes : %s</label>
        <property>/instrumentation/efis/inputs/nd-centered</property>
      </binding>
    </hovered>
  </animation>

  <!--######################## Airports ############################-->
  <animation>
    <type>pick</type>
    <object-name>bt-h1</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/efis/inputs/arpt</property>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/instrumentation/nd/display/arpt</property>
        <property>/instrumentation/efis/inputs/arpt</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>airport</tooltip-id>
        <label>Airport</label>
      </binding>
    </hovered>
  </animation>

  <!--######################## Display way point data ############################-->
  <animation>
    <type>pick</type>
    <object-name>bt-h2</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/efis/inputs/data</property>
        <value>true</value>
        <value>false</value>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>way_point_data</tooltip-id>
        <label>Waypoint data</label>
      </binding>
    </hovered>
  </animation>

  <!--######################## Wpt ############################-->
  <animation>
    <type>pick</type>
    <object-name>bt-h3</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/efis/inputs/wpt</property>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/instrumentation/nd/display/fix</property>
        <property>/instrumentation/efis/inputs/wpt</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>way_point</tooltip-id>
        <label>Waypoints</label>
      </binding>
    </hovered>
  </animation>

  <!--######################## Position point ############################-->
  <animation>
    <type>pick</type>
    <object-name>bt-h4</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/efis/inputs/pos</property>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>/instrumentation/nd/display/vor</property>
        <property>/instrumentation/efis/inputs/pos</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>position_point</tooltip-id>
        <label>Position points</label>
      </binding>
    </hovered>
  </animation>

  <!--######################## Weather ############################-->
  <animation>
    <type>pick</type>
    <object-name>bt-h5</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/efis/inputs/wxr</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>weather</tooltip-id>
        <label>Weather</label>
      </binding>
    </hovered>
  </animation>

  <!-- ###################### Distance #############################-->
  <animation>
    <type>pick</type>
    <object-name>trim1</object-name>
    <action>
      <button>4</button>
      <!--  scroll down -->
      <repeatable>false</repeatable>
      <binding>
        <command>property-cycle</command>
        <property>/instrumentation/efis/inputs/range-nm</property>
        <value>10</value>
        <value>20</value>
        <value>40</value>
        <value>80</value>
        <value>160</value>
        <value>320</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/tcas/range</property>
        <property>/instrumentation/efis/inputs/range-nm</property>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/nd/range</property>
        <property>/instrumentation/efis/inputs/range-nm</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>trim1</object-name>
    <action>
      <button>3</button>
      <!--  scroll up -->
      <repeatable>false</repeatable>
      <binding>
        <command>property-cycle</command>
        <property>/instrumentation/efis/inputs/range-nm</property>
        <value>320</value>
        <value>160</value>
        <value>80</value>
        <value>40</value>
        <value>20</value>
        <value>10</value>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/tcas/range</property>
        <property>/instrumentation/efis/inputs/range-nm</property>
      </binding>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/nd/range</property>
        <property>/instrumentation/efis/inputs/range-nm</property>
      </binding>
    </action>
  </animation>

  <!--End of Distance management -->
  <animation>
    <type>pick</type>
    <object-name>trim2</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/instrumentation/efis/serviceable</property>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>trim2</object-name>
    <action>
      <button>3</button>
      <!--  scroll up -->
      <repeatable>false</repeatable>
      <binding>
        <command>property-cycle</command>
        <property>/instrumentation/efis/on</property>
        <value>1</value>
        <value>0</value>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>trim2</object-name>
    <action>
      <button>4</button>
      <!--  scroll down -->
      <repeatable>false</repeatable>
      <binding>
        <command>property-cycle</command>
        <property>/instrumentation/efis/on</property>
        <value>0</value>
        <value>1</value>
      </binding>
    </action>
  </animation>

