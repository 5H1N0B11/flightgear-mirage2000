  <!--EHSI CRS KNOB-->
  <animation>
    <type>pick</type>
    <object-name>br-knob</object-name>
    <action>
      <button>4</button>      <!--  scroll up -->
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav/radials/selected-deg</property>
        <step>1</step>
        <min>1</min>
        <max>361</max>
        <wrap>true</wrap>
        <condition>
          <and>
            <equals>
              <property>/instrumentation/mfd/modeR</property>
              <value>0</value>
            </equals>
            <equals>
              <property>autopilot/settings/nav-source</property>
              <value>NAV1</value>
            </equals>
          </and>
        </condition>
      </binding>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/nav[1]/radials/selected-deg</property>
        <step>1</step>
        <min>1</min>
        <max>361</max>
        <wrap>true</wrap>
        <condition>
          <and>
            <equals>
              <property>/instrumentation/mfd/modeR</property>
              <value>0</value>
            </equals>
            <equals>
              <property>autopilot/settings/nav-source</property>
              <value>NAV2</value>
            </equals>
          </and>
        </condition>
      </binding>
      <binding>
        <command>nasal</command>
        <script>mirage2000.myRightMfd.changeZoomMap(1)</script>
        <condition>
          <equals>
            <property>/instrumentation/mfd/modeR</property>
            <value>2</value>
          </equals>
        </condition>
      </binding>
    </action>
  </animation>

