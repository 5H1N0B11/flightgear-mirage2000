<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>ap.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>label</object-name>
    <object-name>cadre</object-name>
    <object-name>pa</object-name>
    <object-name>pa-alt</object-name>
    <object-name>pa-vs</object-name>
    <object-name>pa-nav</object-name>
    <object-name>pa-spd</object-name>
    <object-name>pa-app</object-name>
    <object-name>pa-stby</object-name>
    <object-name>pa-hdg</object-name>
    <object-name>pa-on</object-name>
    <object-name>pa-alt-on</object-name>
    <object-name>pa-vs-on</object-name>
    <object-name>pa-nav-on</object-name>
    <object-name>pa-spd-on</object-name>
    <object-name>pa-app-on</object-name>
    <object-name>pa-stby-on</object-name>
    <object-name>pa-hdg-on</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>pa</object-name>
    <object-name>pa-alt</object-name>
    <object-name>pa-vs</object-name>
    <object-name>pa-nav</object-name>
    <object-name>pa-spd</object-name>
    <object-name>pa-app</object-name>
    <object-name>pa-stby</object-name>
    <object-name>pa-hdg</object-name>
    <object-name>pa-on</object-name>
    <object-name>pa-alt-on</object-name>
    <object-name>pa-vs-on</object-name>
    <object-name>pa-nav-on</object-name>
    <object-name>pa-spd-on</object-name>
    <object-name>pa-app-on</object-name>
    <object-name>pa-stby-on</object-name>
    <object-name>pa-hdg-on</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.6 </red>
      <green> 0.5 </green>
      <blue>  0.5 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <object-name>label</object-name>
    <condition>
      <not>
        <property>sim/rendering/rembrandt/enabled</property>
      </not>
    </condition>
    <emission>
      <red>   0.13 </red>
      <green> 0.13 </green>
      <blue>  0.13 </blue>
    </emission>
  </animation>

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <object-name>label</object-name>
    <condition>
      <property>sim/rendering/rembrandt/enabled</property>
    </condition>
    <emission>
      <red>   0.05 </red>
      <green> 0.05 </green>
      <blue>  0.05 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pa-on</object-name>
    <condition>
      <or>
        <equals>
          <property>autopilot/locks/AP-status</property>
          <value>AP1</value>
        </equals>
        <and>
          <equals>
            <property>autopilot/locks/AP-status</property>
            <value>TEMP DISENGAGE</value>
          </equals>
          <equals>
            <property>sim/model/lights/pa-blink/state</property>
            <value>true</value>
          </equals>
        </and>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pa-stby-on</object-name>
    <condition>
      <and>
        <equals>
          <property>autopilot/locks/heading</property>
          <value>ROLL</value>
        </equals>
        <equals>
          <property>autopilot/locks/altitude</property>
          <value>PTCH</value>
        </equals>
      </and>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pa-hdg-on</object-name>
    <condition>
      <equals>
        <property>autopilot/locks/heading</property>
        <value>HDG</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pa-nav-on</object-name>
    <condition>
      <or>
        <equals>
          <property>autopilot/locks/heading</property>
          <value>LNAV</value>
        </equals>
        <equals>
          <property>autopilot/locks/heading</property>
          <value>VOR</value>
        </equals>
        <equals>
          <property>autopilot/locks/heading</property>
          <value>LOC</value>
        </equals>
        <equals>
          <property>autopilot/locks/heading-arm</property>
          <value>VOR</value>
        </equals>
        <equals>
          <property>autopilot/locks/heading-arm</property>
          <value>LOC</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pa-app-on</object-name>
    <condition>
      <or>
        <equals>
          <property>autopilot/locks/altitude-arm</property>
          <value>GS</value>
        </equals>
        <equals>
          <property>autopilot/locks/altitude</property>
          <value>GS</value>
        </equals>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pa-alt-on</object-name>
    <condition>
      <or>
        <equals>
          <property>autopilot/locks/altitude</property>
          <value>ALT</value>
        </equals>
        <and>
          <equals>
            <property>autopilot/locks/altitude</property>
            <value>TF</value>
          </equals>
          <property>sim/model/lights/pa-blink/state</property>
        </and>
      </or>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pa-vs-on</object-name>
    <condition>
      <equals>
        <property>autopilot/locks/altitude</property>
        <value>VS</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>pa-spd-on</object-name>
    <condition>
      <equals>
        <property>autopilot/locks/speed</property>
        <value>SPD</value>
      </equals>
    </condition>
  </animation>

  <!--BOUTONS-->
  <animation>
    <type>pick</type>
    <object-name>pa-hdg</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/click</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>mirage2000.FD_set_mode("hdg")</script>
      </binding>
    </action>
  </animation>

