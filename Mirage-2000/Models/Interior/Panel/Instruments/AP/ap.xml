        <script>mirage2000.pitch_wheel(1)</script>
      </binding>
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>pa-pitch</object-name>
    <property>autopilot/settings/target-pitch-deg</property>
    <factor>10</factor>
    <center>
      <x-m>-0.02470</x-m>
      <y-m> 0.02378</y-m>
      <z-m>-0.04915</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

