<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>lights.ac</path>

  <animation>
    <object-name>base</object-name>
    <object-name>vissesbutton</object-name>
    <object-name>cache</object-name>
    <object-name>button1</object-name>
    <object-name>button2</object-name>
    <object-name>button3</object-name>
    <object-name>button4</object-name>
    <object-name>button5</object-name>
    <object-name>button6</object-name>
    <object-name>button7</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>button1</object-name>
    <object-name>button2</object-name>
    <object-name>button3</object-name>
    <object-name>button4</object-name>
    <object-name>button5</object-name>
    <object-name>button6</object-name>
    <object-name>button7</object-name>
    <emission>
      <factor>0.13</factor>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>

  <!--#####   Landing Lights   ########-->
  <animation>
    <type>pick</type>
    <object-name>button2</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/landing-lights</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/landing-lights[1]</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>bp</tooltip-id>
        <label>Landing Lights</label>
      </binding>
    </hovered>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>button2</object-name>
    <property>/controls/lighting/landing-lights</property>
    <offset-deg>-50</offset-deg>
    <factor>50</factor>
    <center>
    <x-m>  0.00384 </x-m>
    <y-m> -0.03684 </y-m>
    <z-m>  0.00065 </z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>
  
  <!--#####   Flash Lights   ########-->
  <animation>
    <type>pick</type>
    <object-name>button3</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/strobe</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/strobeBelly</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>bp</tooltip-id>
        <label>Dorsal Flash Lights</label>
      </binding>
    </hovered>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>button3</object-name>
    <property>/controls/lighting/strobe</property>
    <offset-deg>-50</offset-deg>
    <factor>50</factor>
    <center>
    <x-m>  0.00084 </x-m>
    <y-m> -0.03684 </y-m>
    <z-m> -0.02335 </z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

  <!--#####   Formation Lights   ########-->
  <animation>
    <type>pick</type>
    <object-name>button4</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/formation-lights</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>bp</tooltip-id>
        <label>Formation Lights</label>
      </binding>
    </hovered>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>button4</object-name>
    <property>/controls/lighting/formation-lights</property>
    <offset-deg>-50</offset-deg>
    <factor>50</factor>
    <center>
    <x-m>  0.00084 </x-m>
    <y-m> -0.01484 </y-m>
    <z-m> -0.02935 </z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

  <!--#####   Tail Lights   ########-->
  <animation>
    <type>pick</type>
    <object-name>button5</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/tailLight</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>bp</tooltip-id>
        <label>Tail Position Lights</label>
      </binding>
    </hovered>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>button5</object-name>
    <property>/controls/lighting/tailLight</property>
    <offset-deg>-50</offset-deg>
    <factor>50</factor>
    <center>
    <x-m>  0.00084 </x-m>
    <y-m> -0.00184 </y-m>
    <z-m> -0.02935 </z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

  <!--#####   Wings Lights   ########-->
  <animation>
    <type>pick</type>
    <object-name>button6</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>/controls/lighting/position</property>
      </binding>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>bp</tooltip-id>
        <label>Wings Position Lights</label>
      </binding>
    </hovered>
  </animation>
  <animation>
    <type>rotate</type>
    <object-name>button6</object-name>
    <property>/controls/lighting/position</property>
    <offset-deg>-50</offset-deg>
    <factor>50</factor>
    <center>
    <x-m>  0.00084 </x-m>
    <y-m>  0.01116 </y-m>
    <z-m> -0.02935 </z-m>
    </center>
    <axis>
      <x>0</x>
      <y>-1</y>
      <z>0</z>
    </axis>
  </animation>

