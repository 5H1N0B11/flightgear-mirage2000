<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>jettison.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>button</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>button</object-name>
    <emission>
      <factor>0.13</factor>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
  </animation>

  <!-- Select missile -->
  <animation>
    <type>pick</type>
    <object-name>button</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>/controls/switches/jettinson-button</property>
      </binding>
      <binding>
        <command>nasal</command>
        <script>m2000_load.dropTanks();</script>
      </binding>
      <mod-up>
        <binding>
          <command>property-toggle</command>
          <property>/controls/switches/jettinson-button</property>
        </binding>
      </mod-up>
    </action>
    <hovered>
      <binding>
        <command>set-tooltip</command>
        <tooltip-id>jettison</tooltip-id>
        <label>Jettison Tank</label>
        <!--<property>instrumentation/airspeed-indicator/indicated-speed-kt</property>-->
      </binding>
    </hovered>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>button</object-name>
    <property>/controls/switches/jettinson-button</property>
    <factor>0.003</factor>
    <axis>
      <x>-1</x>
      <y> 0</y>
      <z> 0</z>
    </axis>
  </animation>



  <!--
================================================================================
                                                                        TEXT OSG
================================================================================
  -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Jettison</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.016</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>.02</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>1</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
  </animation>
  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>


</PropertyList>
