<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>tacan.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>base</object-name>
    <object-name>texte</object-name>
    <object-name>num-0</object-name>
    <object-name>num-1</object-name>
    <object-name>num-2</object-name>
    <object-name>alphaX</object-name>
    <object-name>alphaY</object-name>
    <object-name>butonX</object-name>
    <object-name>butonY</object-name>
    <object-name>buton2</object-name>

    <!-- Objets transparents -->

  </animation>


  <animation>
    <type>material</type>
    <object-name>texte</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>

  <animation>
    <type>select</type>
    <object-name>alphaX</object-name>
    <condition>
      <equals>
        <property>instrumentation/tacan/frequencies/selected-channel[4]</property>
        <value>X</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>alphaY</object-name>
    <condition>
      <equals>
        <property>instrumentation/tacan/frequencies/selected-channel[4]</property>
        <value>Y</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>butonX</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/tacan/frequencies/selected-channel[4]</property>
        <value>X</value>
      </binding>
    </action>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>butonY</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-assign</command>
        <property>instrumentation/tacan/frequencies/selected-channel[4]</property>
        <value>Y</value>
      </binding>
    </action>
  </animation>

  <animation>
    <name>buton1</name>
    <object-name>butonX</object-name>
    <object-name>butonY</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>buton1</object-name>
    <property>instrumentation/tacan/frequencies/XPos</property>
    <factor>30</factor>
    <center>
      <x-m> 0.003574</x-m>
      <y-m>-0.010760</y-m>
      <z-m>-0.005036</z-m>
    </center>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>num-0</object-name>
    <property>instrumentation/tacan/frequencies/selected-channel[1]</property>
    <factor>-0.1</factor>
    <offset>0</offset>
    <axis>
      <x> 0</x>
      <y>-1</y>
      <z> 0</z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>num-1</object-name>
    <property>instrumentation/tacan/frequencies/selected-channel[2]</property>
    <factor>-0.1</factor>
    <offset>0</offset>
    <axis>
      <x> 0</x>
      <y>-1</y>
      <z> 0</z>
    </axis>
  </animation>

  <animation>
    <type>textranslate</type>
    <object-name>num-2</object-name>
    <property>instrumentation/tacan/frequencies/selected-channel[3]</property>
    <factor>-0.1</factor>
    <offset>0</offset>
    <axis>
      <x> 0</x>
      <y>-1</y>
      <z> 0</z>
    </axis>
  </animation>

  <!--
  Position centre button2 (gauche)
  
  x :  0.003574
  y :  0.010760
  z : -0.005036
  -->



  <!--
================================================================================
                                                                        TEXT OSG
================================================================================
  -->
  <text>
    <name>textosg</name>
    <type type="string">literal</type>
    <text type="string">Tacan</text>
    <draw-text type="bool">true</draw-text>
    <font>Helvetica.txf</font>
    <character-size type="double">0.016</character-size>
    <character-aspect-ratio type="double">1.0</character-aspect-ratio>
    <axis-alignment>yz-plane</axis-alignment>
    <max-height>0.06</max-height>
    <max-width>0.08</max-width>
    <font-resolution>
      <width type="int">64</width>
      <height type="int">64</height>
    </font-resolution>
    <alignment>center-center</alignment>
    <offsets>
      <x-m>.02</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </text>

  <animation>
    <type>material</type>
    <object-name>textosg</object-name>
    <emission>
      <red>1</red>
      <green>0.2</green>
      <blue>0.2</blue>
    </emission>
  </animation>
  <animation>
    <type>select</type>
    <object-name>textosg</object-name>
    <condition>
      <property>sim/panel-hotspots</property>
    </condition>
  </animation>



</PropertyList>
