				<min>1</min>
				<max>361</max>
				<wrap>true</wrap>
				<condition>
					<and>
					<equals>
						<property>/instrumentation/mfd/modeL</property>
						<value>1</value>
					</equals>
					<equals>
						<property>autopilot/settings/nav-source</property>
						<value>NAV1</value>
					</equals>
					</and>
				</condition>
			</binding>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/nav[1]/radials/selected-deg</property>
				<step>1</step>
				<min>1</min>
				<max>361</max>
				<wrap>true</wrap>
				<condition>
					<and>
					<equals>
						<property>/instrumentation/mfd/modeL</property>
						<value>1</value>
					</equals>
					<equals>
						<property>autopilot/settings/nav-source</property>
						<value>NAV2</value>
					</equals>
					</and>
