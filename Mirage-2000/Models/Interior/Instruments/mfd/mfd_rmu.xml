<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <path>mfd_rmu.ac</path>

  <!-- *************Text*************** -->
  <model>
    <name>text3dRMU</name>
    <path>Aircraft/Mirage-2000/Models/Interior/Instruments/mfd/mfd_3dtextRMU.xml</path>
    <offsets>
      <x-m>-0.008</x-m>
      <y-m>0.000</y-m>
      <z-m>0.000</z-m>
      <pitch-deg>0</pitch-deg>
    </offsets>
    <condition>
      <equals>
        <property>/instrumentation/mfd/modeL</property>
        <value>3</value>
      </equals>
    </condition>
  </model>

  <!-- RMU -->
  <object-name>RMU-ecran</object-name>
  <object-name>RMU-rep-bt</object-name>
  <object-name>RMU-rep-adf1</object-name>
  <object-name>RMU-rep-adf2</object-name>
  <object-name>RMU-rep-comm1</object-name>
  <object-name>RMU-rep-comm2</object-name>
  <object-name>RMU-rep-nav1</object-name>
  <object-name>RMU-rep-nav2</object-name>
  <object-name>RMU-rep-tacan</object-name>
  <object-name>text3dRMU</object-name>

  <animation>
    <type>material</type>
    <object-name>RMU-ecran</object-name>
    <object-name>RMU-rep-bt</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </emission>
    <ambient>
      <factor-prop>instrumentation/mfd/dimm-l</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </ambient>
    <diffuse>
      <factor-prop>instrumentation/mfd/dimm-l</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </diffuse>
    <specular>
      <factor-prop>instrumentation/mfd/dimm-l</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </specular>
  </animation>

  <animation>
    <type>material</type>
    <object-name>RMU-rep-adf1</object-name>
    <object-name>RMU-rep-adf2</object-name>
    <object-name>RMU-rep-comm1</object-name>
    <object-name>RMU-rep-comm2</object-name>
    <object-name>RMU-rep-nav1</object-name>
    <object-name>RMU-rep-nav2</object-name>
    <object-name>RMU-rep-tacan</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.7 </red>
      <green> 0.7 </green>
      <blue>  0.7 </blue>
    </emission>
    <ambient>
      <factor-prop>instrumentation/mfd/dimm-l</factor-prop>
      <red>   0.7 </red>
      <green> 0.7 </green>
      <blue>  0.7 </blue>
    </ambient>
    <diffuse>
      <factor-prop>instrumentation/mfd/dimm-l</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </diffuse>
    <specular>
      <factor-prop>instrumentation/mfd/dimm-l</factor-prop>
      <red>   1 </red>
      <green> 1 </green>
      <blue>  1 </blue>
    </specular>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RMU-rep-comm1</object-name>
    <condition>
      <equals>
        <property>instrumentation/mfd/rmuL</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RMU-rep-comm2</object-name>
    <condition>
      <equals>
        <property>instrumentation/mfd/rmuL</property>
        <value>2</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RMU-rep-nav1</object-name>
    <condition>
      <equals>
        <property>instrumentation/mfd/rmuL</property>
        <value>3</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RMU-rep-nav2</object-name>
    <condition>
      <equals>
        <property>instrumentation/mfd/rmuL</property>
        <value>4</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RMU-rep-adf1</object-name>
    <condition>
      <equals>
        <property>instrumentation/mfd/rmuR</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RMU-rep-adf2</object-name>
    <condition>
      <equals>
        <property>instrumentation/mfd/rmuR</property>
        <value>2</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>RMU-rep-tacan</object-name>
    <condition>
      <equals>
        <property>instrumentation/mfd/rmuR</property>
        <value>3</value>
      </equals>
    </condition>
  </animation>

</PropertyList>
