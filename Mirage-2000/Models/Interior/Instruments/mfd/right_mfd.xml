    </condition>
  </animation>

   <animation>
    <type>select</type>
    <object-name>right_mfd.black_screen</object-name>
    <condition>
      <less-than>
        <property>/systems/electrical/volts</property>
        <value>12</value>
      </less-than>
    </condition>
  </animation>

