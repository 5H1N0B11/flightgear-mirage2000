<?xml version="1.0" encoding="iso-8859-1"?>
<!-- R40 AIM (USSR)
R40
Type    long range
Year    1970
Range   2 up to 70 km
Weight  500 kg
Length  6.3 m
Warhead Semiactive Radarhoming
-->

<PropertyList>

  <path>R40.ac</path>

  <animation>
    <type>select</type>
    <object-name>RD-40</object-name>
    <condition>
      <not>
        <property>fdm/jsbsim/systems/armament/station1/released</property>
      </not>
    </condition>
  </animation>

  <!-- Smoke -->
  <model>
    <path>Aircraft/DavePack/Stores/FFAR/smoke.xml</path>
    <offsets>
      <x-m>2.0</x-m>
      <y-m>0.0</y-m>
      <z-m>0.0</z-m>
    </offsets>
  </model>

</PropertyList>

