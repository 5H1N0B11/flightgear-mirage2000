<?xml version="1.0" encoding="iso-8859-1"?>
<PropertyList>
    
  <model>
    <name>smoke-pod-500</name>
    <path>Aircraft/Mirage-2000/Missiles/SmokePod/SmokePod.xml</path>
  </model>
    
  <animation>
    <object-name>smoke-pod-500</object-name>
    <enable-hot type="bool">false</enable-hot>
  </animation>
  <animation>
    <type>select</type>
    <object-name>smoke-pod-500</object-name>
    <condition>
        <equals>
          <property>payload/armament/station/id-5-set</property>
          <value>Smoke Pod</value>
        </equals>
    </condition>
  </animation>
  
  
  <model>
    <name>smoke_smoke-pod-500</name>
    <path>Aircraft/Mirage-2000/Missiles/SmokePod/smoke.xml</path>
    <offsets>
      <x-m>4</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </offsets>
  </model>
  <animation>
    <type>select</type>
    <object-name>smoke_smoke-pod-500</object-name>
    <condition>
        <property>payload/armament/smoke-pod/flags/smoke-id-500</property>
    </condition>
  </animation>
  
  

</PropertyList>
