<?xml version="1.0" encoding="iso-8859-1"?>
<!-- 
	Authors: Josh Davidson (Octal450), Richard Harrison, Axel Paccalin.
	Version: 0.2
	
	System to pass-through direct normalized pilot commands to the spoilers actuators.
-->

<system name="Mirage-2000: FCS/Dispatch">
	<channel name="Spoilers">
		<!-- Normalized command for the spoilers (toggled by the FBW mode switching mechanism). -->
		<switch name="fcs/dispatch/spoilers/output-norm">
			<default value="0"/>  <!-- No hydraulics -->
			<test logic="OR" value="/controls/flight/spoilers">
				fcs/fbw/mode eq 1
				fcs/fbw/mode eq 0
			</test>
			<test logic="OR" value="fcs/dispatch/dist/spoilers">
				fcs/fbw/mode eq 2
			</test>
		</switch>
	</channel>
</system>