<!-- 
	Authors: Axel Paccalin.
	Version: 0.1
	
	System to pass-through normalized slats commands to the slats actuators. 
-->

<system name="Mirage-2000: FCS/Dispatch">
	<channel name="Slats">

		<!-- Normalized command for the slats (toggled by the FBW mode switching mechanism). -->
		<switch name="fcs/dispatch/slats/output-norm">
			<default value="0"/>  <!-- No hydraulics -->
			<test logic="OR" value="fcs/fbw/slats/output">
				fcs/fbw/mode eq 1
				fcs/fbw/mode eq 0
			</test>
			<test logic="OR" value="fcs/dispatch/dist/slats">
				fcs/fbw/mode eq 2
			</test>
		</switch>
	</channel>
</system>