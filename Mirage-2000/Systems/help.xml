<?xml version="1.0" encoding="utf-8"?>

<PropertyList>

	<title>Mirage 2000</title>

	<key>
		<name>d</name>
		<desc>Open/Close pilot canopy</desc>
	</key>

	<key>
		<name>D</name>
		<desc>Open/Close backseat canopy</desc>
	</key>

	<key>
		<name>}</name>
		<desc>Engine Autostart</desc>
	</key>


	<key>
		<name>b</name>
		<desc>On ground : brakes. On fly : Airbrakes</desc>
	</key>

	<key>
		<name>R</name>
		<desc>Increase Radar Distances (10, 20, 40, 60, 160)</desc>
	</key>

	<key>
		<name>E</name>
		<desc>Decrease Radar Distances (10, 20, 40, 60, 160)</desc>
	</key>

	<key>
		<name>Q</name>
		<desc>Cycle radar root modes</desc>
	</key>

	<key>
		<name>ctrl-q</name>
		<desc>Cycle radar mode within root mode</desc>
	</key>

	<key>
		<name>y</name>
		<desc>Next TWS Target select</desc>
	</key>

	<key>
		<name>Ctrl-y</name>
		<desc>Target deselect</desc>
	</key>

	<key>
		<name>w</name>
		<desc>Cycle Stick Weapon Mode Selector</desc>
	</key>

	<key>
		<name>ctrl-w</name>
		<desc>Cycle Drop Mode CCRP/CCIP</desc>
	</key>

	<key>
		<name>m</name>
		<desc>Master Arm switch</desc>
	</key>

	<key>
		<name>M</name>
		<desc>Toggle Target Designation Mode (Radar, Laser, GPS)</desc>
	</key>

	<key>
		<name>e</name>
		<desc>Trigger for guns/missiles</desc>
	</key>

	<key>
		<name>arrows</name>
		<desc>Move cursor on VTM</desc>
	</key>

	<key>
		<name>l</name>
		<desc>Cursor designate</desc>
	</key>

	<key>
		<name>ctrl-e</name>
		<desc>3 times in a second: Ejection</desc>
	</key>

	<key>
		<name>J</name>
		<desc>Release 2,3,4 (Jettison Tank)</desc>
	</key>

	<key>
		<name>q</name>
		<desc>Flare out</desc>
	</key>

	<key>
		<name>o</name>
		<desc>Only on ground : Deploy or release the brake parachute</desc>
	</key>

	<key>
		<name>F6</name>
		<desc>Enable automatic tracking by FLIR camera</desc>
	</key>

	<text>The manual can be found at: https://github.com/5H1N0B11/flightgear-mirage2000/wiki</text>
</PropertyList>
