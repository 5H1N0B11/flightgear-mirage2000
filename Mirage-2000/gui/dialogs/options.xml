<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>
  
  <!-- If you put the dialog file in the Aircraft/aircraftname/gui/dialog the dialog box is loaded -->
  <name>options</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>

  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>

    <text>
      <label>Options</label>
    </text>

    <empty>
      <stretch>1</stretch>
    </empty>

    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend />

      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule />

  <group>
    <layout>hbox</layout>
    <text><label>Show Pilot</label></text>
    <checkbox>
      <property>/controls/seat/pilot</property>
      <live>true</live>
      <binding>
        <command>property-toggle</command>
        <property>/controls/seat/pilot</property>
      </binding>
    </checkbox>
  </group>
  
  <group>
    <layout>hbox</layout>
    <text><label>Dynamic view Enabled</label></text>
    <checkbox>
      <property>sim/disable-custom-view</property>
      <live>false</live>
      <binding>
        <command>property-toggle</command>
        <property>sim/disable-custom-view</property>
      </binding>
    </checkbox>
  </group>
  

  <group>
    <layout>hbox</layout>
    <text><label>Cockpit Vibration</label></text>
    <checkbox>
      <property>/controls/cabin/shake-effect</property>
      <live>true</live>
      <binding>
        <command>property-toggle</command>
        <property>/controls/cabin/shake-effect</property>
      </binding>
    </checkbox>
  </group>

  <hrule />

  <button>
    <legend>Toggle ground equipment</legend>
    <binding>
      <command>property-toggle</command>
      <property>/controls/ground-equipment</property>
    </binding>
  </button>
  
  <hrule />
  <group>
    <layout>hbox</layout>
    <text><label>Smoke (Needs pods)</label></text>
    <checkbox>
      <property>payload/armament/smoke-pod/flags/smoke-id-500</property>
      <live>false</live>
      <binding>
        <command>property-toggle</command>
        <property>payload/armament/smoke-pod/flags/smoke-id-100</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>payload/armament/smoke-pod/flags/smoke-id-500</property>
      </binding>
    </checkbox>
  </group>
  
  <hrule />
  <text><label>Fly-by-wire</label></text>
  <group>
    <layout>hbox</layout>
    <group>
      <layout>vbox</layout>
      <halign>left</halign>
      <text><label>A/A - CHARGES</label></text>
    </group>
    <group>
      <layout>vbox</layout>
      <halign>right</halign>
      <slider>
        <name>CAT</name>
        <property>/fdm/jsbsim/fbw/mode</property>
        <live>1</live>
        <min>0</min>
        <max>1</max>
        <step>1</step>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
    </group>
  </group>
        
  
  <hrule />
  
    <group>
    <layout>hbox</layout>
    <text><halign>left</halign><label>AP TF Smooth (- +)</label></text>
    <group>
    <layout>vbox</layout>
    <halign>right</halign>
      <slider>
        <name>APTF</name>
        <property>/autopilot/settings/tf-mode</property>
        <live>1</live>
        <min>1</min>
        <max>10</max>
        <step>1</step>
        <binding>
          <command>dialog-apply</command>
        </binding>
        <binding>
          <command>nasal</command>
          <script>
              gui.popupTip(sprintf("AP TF Smooth (- +) : %d", getprop("/autopilot/settings/tf-mode")));
          </script>
        </binding>
      </slider>
      </group>
  </group>
  
  <group>
    <layout>hbox</layout>
    <group><text><label>Predictions (- +)</label></text></group>
    <group>
    <layout>vbox</layout>
    <halign>right</halign>
      <slider>
        <name>APTF</name>
        <property>/instrumentation/tfs/delay-sec</property>
        <live>1</live>
        <min>0.5</min>
        <max>5</max>
        <step>0.5</step>
        <binding>
          <command>dialog-apply</command>
        </binding>
        <binding>
          <command>nasal</command>
          <script>
              gui.popupTip(sprintf("Predictions (- +) : %.1f", getprop("/instrumentation/tfs/delay-sec")));
          </script>
        </binding>
      </slider>
      </group>
  </group>

  <hrule />
  
  

  
  <!--group>
    <layout>hbox</layout>
    <group><text><label>HUD</label></text></group>

    <group>
    <layout>vbox</layout>
    <halign>right</halign>
      <slider>
        <name>HUD</name>
        <property>controls/hud</property>
        <live>1</live>
        <min>0</min>
        <max>1</max>
        <step>1</step>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
      </group>
  </group-->

  <!-- ~~~~~~~~~~~~~~~~~~ assistance -->
  <group>
    <layout>table</layout>
    <halign>left</halign>
    <button>
      <row>0</row><col>0</col>
      <legend>need assistance</legend>
      <binding>
        <command>property-assign</command>
        <property>/controls/assistance</property>
        <value>1</value>
      </binding>
    </button>
    <button>
      <row>0</row><col>1</col>
      <legend>it is ok</legend>
      <binding>
        <command>property-assign</command>
        <property>/controls/assistance</property>
        <value>0</value>
      </binding>
    </button>
  </group>

  <hrule />
  <group>
    <layout>table</layout>
    <halign>center</halign> 
    <button>
      <legend>Performances</legend>
      <binding>
        <command>nasal</command>
        <script>
          monitor.PerformanceMonitor.instance().start();
        </script>
      </binding>
    </button>
  </group>
  
  
  
</PropertyList>
