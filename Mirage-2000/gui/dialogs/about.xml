<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>
  <name>about_Mirage</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>

  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>

    <text>
      <label>About</label>
    </text>

    <empty>
      <stretch>1</stretch>
    </empty>

    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule />

  <text><label>Dassault Mirage 2000-5 by 5H1N0B1</label></text>

  <empty>
    <stretch>1</stretch>
  </empty>

  <text><label>Special Thanks to: </label></text>

  <empty>
    <stretch>1</stretch>
  </empty>

  <text><label>Helijah (3D model), Buckaroo (FDM), 5HIN0B1 (working weapons and systems), hardball (3D, systems,</label></text>
  <text><label>dual seat), Josh Davidson (FCS/FBW/Autopilot), Leto, Richard, onox, legoboyvdlp, Domokos Juttner (Rudolf),</label></text>
  <text><label>Koubi (engine script), Ray (helping on the MFD), F-Sig (3D and MFD), Xiii (fox2.nas, the initial missile script),</label></text>
  <text><label>Gijs (wiki page), F-GTUX, Anusil, Talons (testing), J Maverick 16, OPRF Crew (testing) and all those forgotten here.</label></text>
  <text><label>Thanks to all!</label></text>

  <hrule />

  <group>
    <layout>table</layout>
    <button>
      <row>0</row>
      <col>0</col>
      <legend>Development link</legend>
      <binding>
        <command>nasal</command>
        <script>
          var phrase = "Development link: https://github.com/5H1N0B11/Aircraft";
          setprop("/sim/multiplay/chat", phrase);
        </script>
      </binding>
    </button>

    <button>
      <row>0</row>
      <col>1</col>
      <legend>Stable Release</legend>
      <binding>
        <command>nasal</command>
        <script>
          var phrase = "Stable Release: Available on FGADDON";
          setprop("/sim/multiplay/chat", phrase);
        </script>
      </binding>
    </button>
  </group>

  <empty>
    <stretch>1</stretch>
  </empty>

</PropertyList>
