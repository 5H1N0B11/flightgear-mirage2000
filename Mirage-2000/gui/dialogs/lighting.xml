<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>
  <name>lightning</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>
    <text>
      <label>Lightning</label>
    </text>
    <empty>
      <stretch>1</stretch>
    </empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>


  <hrule />

  <group>
    <layout>hbox</layout>
    <group>
      <!-- Labels -->
      <layout>vbox</layout>
      <halign>left</halign>
      <text>
        <label>Board Light</label>
        <enable><property>sim/rendering/rembrandt/enabled</property></enable>
      </text>
      <text>
        <label>Side Light</label>
        <enable><property>sim/rendering/rembrandt/enabled</property></enable>
      </text>
      <text>
        <label>Instruments</label>
      </text>
      <hrule />
      <text>
        <label>Taxi / Landing</label>
      </text>
      <!--<text>
        <label>ALS / Landing</label>
        <enable><property>/sim/rendering/shaders/skydome</property></enable>
      </text>-->
      <text>
        <label>Formation</label>
      </text>
      <text>
        <label>Dorsal Anti Collision</label>
      </text>
      <text>
        <label>Belly Anti Collision</label>
      </text>
      <text>
        <label>Tail Light</label>
      </text>
      <text>
        <label>Position</label>
      </text>
    </group>
    <group>
      <layout>vbox</layout>
      <halign>right</halign>

      <slider>
        <name>boardLightUV</name>
        <property>/controls/lighting/boardLightUV</property>
        <enable><property>sim/rendering/rembrandt/enabled</property></enable>
        <live>0.1</live>
        <min>0</min>
        <max>1</max>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
      <slider>
        <name>sideLightUV</name>
        <property>/controls/lighting/sideLightUV</property>
        <enable><property>sim/rendering/rembrandt/enabled</property></enable>
        <live>0.1</live>
        <min>0</min>
        <max>1</max>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
      <slider>
        <name>instruments-norm</name>
        <property>/controls/lighting/instruments-norm</property>
        <live>0.1</live>
        <min>0</min>
        <max>1</max>
        <binding>
          <command>dialog-apply</command>
        </binding>
      </slider>
      <hrule />
      <checkbox>
        <name>landing</name>
        <property>/controls/lighting/landing-lights</property>
        <live>true</live>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/landing-lights</property>
        </binding>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/landing-lights[1]</property>
        </binding>
      </checkbox>
      <!--<checkbox>
        <name>ALSLanding</name>
        <property>/sim/rendering/als-secondary-lights/use-landing-light</property>
        <enable><property>/sim/rendering/shaders/skydome</property></enable>
        <live>true</live>
        <binding>
          <command>property-toggle</command>
          <property>/sim/rendering/als-secondary-lights/use-landing-light</property>
        </binding>
      </checkbox>-->
      <checkbox>
        <name>formation</name>
        <property>/controls/lighting/formation-lights</property>
        <live>true</live>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/formation-lights</property>
        </binding>
      </checkbox>
      <checkbox>
        <name>AntiCollisionD</name>
        <property>/controls/lighting/strobe</property>
        <live>true</live>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/strobe</property>
        </binding>
      </checkbox>
      <checkbox>
        <name>AntiCollisionV</name>
        <property>/controls/lighting/strobeBelly</property>
        <live>true</live>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/strobeBelly</property>
        </binding>
      </checkbox>
      <checkbox>
        <name>Tail</name>
        <property>/controls/lighting/tailLight</property>
        <live>true</live>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/tailLight</property>
        </binding>
      </checkbox>
      <checkbox>
        <name>Position</name>
        <property>/controls/lighting/position</property>
        <live>true</live>
        <binding>
          <command>property-toggle</command>
          <property>/controls/lighting/position</property>
        </binding>
      </checkbox>
    </group>
  </group>
  <hrule />

  <group>
    <layout>hbox</layout>
    <button>
      <legend>cockpit lights</legend>
      <binding>
        <command>property-cycle</command>
        <property>/controls/lighting/cockpit-lights-side</property>
        <value type="float">0.9</value>
        <value type="float">0</value>
      </binding>
      <binding>
        <command>property-cycle</command>
        <property>/controls/lighting/cockpit-lights-top</property>
        <value type="float">0.9</value>
        <value type="float">0</value>
      </binding>
    </button>
  </group>

</PropertyList>

