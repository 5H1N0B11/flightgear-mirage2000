<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>
  <name>payload-d</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  
  <group>
    <layout>hbox</layout>
    <text>
      <label>Payload Quick Select</label>
    </text>
    
    <empty>
      <stretch>1</stretch>
    </empty>
    
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <group>
    <layout>table</layout>
    
    <button>
      <row>0</row>
      <col>1</col>
      <legend>Air to Ground</legend>
      <binding>
	<command>nasal</command>
	<script>pylons.a2g_bravo_mix()</script>
      </binding>
    </button>
    <button>
      <row>1</row>
      <col>0</col>
      <legend>Anti Radar</legend>
      <binding>
	<command>nasal</command>
	<script>pylons.a2ouadi_fox()</script>
      </binding>
    </button>
    <button>
      <row>2</row>
      <col>0</col>
      <legend>Air to Sea</legend>
      <binding>
	<command>nasal</command>
	<script>pylons.a2s_fox()</script>
      </binding>
    </button>  
    <button>
      <row>2</row>
      <col>1</col>
      <legend>m2000N</legend>
      <binding>
	<command>nasal</command>
	<script>pylons.nuke()</script>
      </binding>
    </button>
    <button>
      <row>1</row>
      <col>1</col>
      <legend>Air to Ground 2</legend>
      <binding>
	<command>nasal</command>
	<script>pylons.rifle()</script>
      </binding>
    </button>
    <button>
      <row>0</row>
      <col>0</col>
      <legend>Standoff</legend>
      <binding>
	<command>nasal</command>
	<script>pylons.standoff()</script>
      </binding>
    </button>
    <button><pref-width>110</pref-width>
      </binding>
      <row>4</row>
      <col>0</col>
      <legend>Unguided</legend>
      <binding>
	<command>nasal</command>
	<script>pylons.unguided()</script>
      </binding>
    </button>
    <button><pref-width>110</pref-width>
      <row>4</row>
      <col>1</col>
      <legend>Unguided ER</legend>
      <binding>
	<command>nasal</command>
	<script>pylons.unguided_er()</script>
      </binding>
    </button>
    <button><pref-width>110</pref-width>
      <row>5</row>
      <col>0</col><pref-width>110</pref-width>
      <legend>Unguided SE</legend>
      <binding>
	<command>nasal</command>
	<script>pylons.unguided_se()</script>
      </binding>
    </button>
    <button><pref-width>110</pref-width>
      <row>5</row>
      <col>1</col>
      <legend>Unguided SE ER</legend>
      <binding>
	<command>nasal</command>
	<script>pylons.unguided_se_er()</script>
      </binding>
    </button>
    </button>

  </group>
  
  <button>
    <legend>No load</legend>
    <binding>
      <command>nasal</command>
      <script>pylons.lisse()</script>
    </binding>
  </button>

</PropertyList>
