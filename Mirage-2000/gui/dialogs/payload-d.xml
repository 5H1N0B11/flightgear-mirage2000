<?xml version="1.0" encoding="utf-8"?>

<PropertyList>
	<name>payload-d</name>
	<modal type="bool">false</modal>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>
		<text>
			<label>Quick Payload Reload</label>
		</text>

		<empty>
			<stretch>1</stretch>
		</empty>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>

			<default>1</default>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</button>
	</group>

	<hrule/>

	<group>
		<layout>table</layout>
		<button>
			<pref-width>250</pref-width>
			<row>0</row>
			<col>0</col>
			<legend>SCALP</legend>
			<binding>
				<command>nasal</command>
				<script>pylons.standoff()</script>
			</binding>
		</button>
		<button>
			<pref-width>250</pref-width>
			<row>0</row>
			<col>1</col>
			<legend>ASMP nuclear cruise missile</legend>
			<binding>
				<command>nasal</command>
				<script>pylons.nuke()</script>
			</binding>
		</button>
		<button>
			<pref-width>250</pref-width>
			<row>1</row>
			<col>0</col>
			<legend>Anti Radar (2 ARMAT)</legend>
			<binding>
				<command>nasal</command>
				<script>pylons.a2ouadi_fox()</script>
			</binding>
		</button>
		<button>
			<pref-width>250</pref-width>
			<row>1</row>
			<col>1</col>
			<legend>Air to Sea (2 Exocet)</legend>
			<binding>
				<command>nasal</command>
				<script>pylons.a2s_fox()</script>
			</binding>
		</button>
		<button>
			<pref-width>250</pref-width>
			<row>2</row>
			<col>0</col>
			<legend>Air to Ground (2 GBU-12)</legend>
			<binding>
				<command>nasal</command>
				<script>pylons.a2g_bravo_mix()</script>
			</binding>
		</button>
		<button>
			<pref-width>250</pref-width>
			<row>2</row>
			<col>1</col>
			<legend>Air to Ground (2 AS-30L)</legend>
			<binding>
				<command>nasal</command>
				<script>pylons.rifle()</script>
			</binding>
		</button>
		<button>
			<pref-width>250</pref-width>
			<row>3</row>
			<col>0</col>
			<legend>8 Unguided Mk-82 - 1 Centre Tank</legend>
			<binding>
				<command>nasal</command>
				<script>pylons.unguided()</script>
			</binding>
		</button>
		<button>
			<pref-width>250</pref-width>
			<row>3</row>
			<col>1</col>
			<legend>6 Unguided Mk-82 - 2 Tanks</legend>
			<binding>
				<command>nasal</command>
				<script>pylons.unguided_er()</script>
			</binding>
		</button>
		<button>
			<pref-width>250</pref-width>
			<row>4</row>
			<col>0</col>
			<legend>8 Unguided Mk-82SE - 1 Centre Tank</legend>
			<binding>
				<command>nasal</command>
				<script>pylons.unguided_se()</script>
			</binding>
		</button>
		<button>
			<pref-width>250</pref-width>
			<row>4</row>
			<col>1</col>
			<legend>6 Unguided Mk-82SE - 2 Tanks</legend>
			<binding>
				<command>nasal</command>
				<script>pylons.unguided_se_er()</script>
			</binding>
		</button>
	</group>

	<button><pref-width>250</pref-width>
		<legend>No Load</legend>
		<binding>
			<command>nasal</command>
			<script>pylons.lisse()</script>
		</binding>
	</button>

	<empty>
		<stretch>1</stretch>
	</empty>

</PropertyList>
