<?xml version="1.0" encoding="utf-8"?>

<PropertyList>

  <name>iff</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <draggable>true</draggable>
  <width>200</width>
  <hight>70</hight>

  <group>
    <layout>hbox</layout>
    <text><label>IFF/Datalink code selection</label></text>
    <empty><stretch>1</stretch></empty>
    
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
	<command>dialog-close</command>
      </binding>
      <binding>
	<command>dialog-apply</command>
      </binding>
    </button>
  </group>

  <hrule/>

  <input>
    <width>250</width>
    <hight>25</hight>
    <label>IFF code A</label>
    <property>instrumentation/iff/channel_A</property>
    <live>true</live>
    <halight>left</halight>
    <binding>
      <command>dialog-apply</command>
    </binding>
  </input>
  
  <input>
    <width>250</width>
    <hight>25</hight>
    <label>IFF code B</label>
    <property>instrumentation/iff/channel_B</property>
    <live>true</live>
    <halight>left</halight>
    <binding>
      <command>dialog-apply</command>
    </binding>
  </input>

  <empty>
      <stretch>1</stretch>
  </empty>

  <input>
    <width>250</width>
    <hight>25</hight>
    <label>Datalink channel</label>
    <property>instrumentation/datalink/channel</property>
    <live>true</live>
    <halight>left</halight>
    <binding>
      <command>dialog-apply</command>
    </binding>
  </input>
</PropertyList>
