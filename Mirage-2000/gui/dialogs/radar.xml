<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <name>radar</name>
  <modal type="bool">false</modal>
  <layout>vbox</layout>
  <group>
    <layout>hbox</layout>
    <empty>
      <stretch>1</stretch>
    </empty>
    <text>
      <label>Radar</label>
    </text>
    <empty>
      <stretch>1</stretch>
    </empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>
  
  <hrule />
  
  <group>
    <layout>hbox</layout>

    <group>
      <!-- Labels -->
      <layout>vbox</layout>
      <halign>left</halign>
      <text>
        <label>Radar</label>
      </text>
    </group>
    <group>
      <layout>vbox</layout>
      <halign>right</halign>
      <checkbox>
        <name>Radar</name>
        <property>instrumentation/radar/radar-standby</property>
        <live>true</live>
        <binding>
          <command>property-toggle</command>
          <property>instrumentation/radar/radar-standby</property>
        </binding>
      </checkbox>
    </group>
  </group>

