<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <default>

    <menu n="11">

      <label>Mirage 2000</label>
      <enabled type="bool">true</enabled>

      <item n="1">
        <label>Configuration</label>
        <name>config</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>config</dialog-name>
        </binding>
      </item>

      <item n="2">
        <label>Lighting</label>
        <name>lighting</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>lighting</dialog-name>
        </binding>
      </item>

      <item n="3">
        <label>Flight Mode (View Position)</label>
        <name>flightmode</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>flightmode</dialog-name>
        </binding>
      </item>

      <item n="4">
        <label>--- The Looks ---</label>
        <enabled>false</enabled>
      </item>

      <item n="5">
        <label>Select Livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.toggle()</script>
        </binding>
      </item>

      <item n="6">
        <label>Select Logos</label>
        <binding>
          <command>nasal</command>
          <script>mirage2000.logo_dialog.toggle()</script>
        </binding>
      </item>

      <item n="7">
        <label>Select Service-Door Art</label>
        <binding>
          <command>nasal</command>
          <script>mirage2000.service_door_dialog.toggle()</script>
        </binding>
      </item>

      <item n="8">
        <label>--- Spacer ---</label>
        <enabled>false</enabled>
      </item>

      <item n="9">
        <label>Mission Preplanning</label>
        <name>iff</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>iff</dialog-name>
        </binding>
      </item>

      <!--
      <item n="9">
        <label>Link 16 (Obsolete)</label>
        <name>AboutMirage</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>link16</dialog-name>
        </binding>
      </item>
      -->

      <item n="10">
        <label>--- Spacer ---</label>
        <enabled>false</enabled>
      </item>

      <item n="11">
        <label>Training</label>
        <name>training</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>scenario28</dialog-name>
        </binding>
      </item>

      <item n="12">
        <label>AI Wingmen</label>
        <name>wingmen</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>wingmen</dialog-name>
        </binding>
      </item>

      <item n="13">
        <label>--- Weapons ---</label>
        <enabled>false</enabled>
      </item>

      <item n="14">
        <label>Payload Selection</label>
        <name>payload-qs</name>
        <binding>
          <condition>
            <or>
              <equals>
                <property>sim/aircraft</property>
                <value>m2000-5</value>
              </equals>
              <equals>
                <property>sim/aircraft</property>
                <value>m2000-5B</value>
              </equals>
            </or>
          </condition>
          <command>dialog-show</command>
          <dialog-name>payload-5</dialog-name>
        </binding>
        <binding>
          <condition>
            <equals>
              <property>sim/aircraft</property>
              <value>m2000D</value>
            </equals>
          </condition>
          <command>dialog-show</command>
          <dialog-name>payload-d</dialog-name>
        </binding>
      </item>

      <item n="15">
        <label>Ground Targeting</label>
        <name>ground_targeting</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>ground_targeting</dialog-name>
        </binding>
      </item>

      <item n="16">
        <label>Reload Guns, Flares and Chaffs</label>
        <binding>
          <command>nasal</command>
          <script>
            if(getprop("/gear/gear[0]/wow") or !getprop("payload/armament/msg")){ 
            guns.reload_Cannon();
            }else{
            screen.log.write(mirage2000.msgB);
            }
          </script>
        </binding>
      </item>

      <item n="17">
        <label>--- Other Stuff ---</label>
        <enabled>false</enabled>
      </item>

      <item n="18">
        <label>Combat Event Log</label>
        <name>event-log</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>flightlog</dialog-name>
        </binding>
      </item>

      <item n="19">
        <label>Tacview</label>
        <name>tacview</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>tacview</dialog-name>
        </binding>
      </item>

      <item n="20">
        <label>Call Pushback</label>
        <name>pushback</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>pushback</dialog-name>
        </binding>
      </item>

      <item n="21">
        <label>About the FlightGear Mirage 2000</label>
        <name>about</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>about_Mirage</dialog-name>
        </binding>
      </item>

      <item n="22">
        <label>--- Temporary / Obsolete ---</label>
        <enabled>false</enabled>
      </item>

      <item n="23">
        <label>Development Tests</label>
        <name>options</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>options</dialog-name>
        </binding>
      </item>

    </menu>
  </default>
</PropertyList>
