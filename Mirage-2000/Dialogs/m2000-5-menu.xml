<?xml version="1.0" encoding="iso-8859-1"?>

<PropertyList>

  <default>

    <menu n="11">

      <label>Mirage 2000</label>
      <enabled type="bool">true</enabled>

      <item n="1">
        <label>Configuration</label>
        <name>config</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>config</dialog-name>
        </binding>
      </item>
      
      <item n="2">
        <label>Flight Mode</label>
        <name>FlightMode</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>flightmode</dialog-name>
        </binding>
      </item>
      
      <item n="3">
        <label>Link 16</label>
        <name>AboutMirage</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>link16</dialog-name>
        </binding>
      </item>
      
      
      <item n="4">
        <label>Lights</label>
        <name>lights</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>lightning</dialog-name>
        </binding>
      </item>

      <item n="5">
        <label>Select Livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.toggle()</script>
        </binding>
      </item>

      <item n="6">
        <label>Select Logos</label>
        <binding>
          <command>nasal</command>
          <script>mirage2000.logo_dialog.toggle()</script>
        </binding>
      </item>

       <item n="7">
         <label>Select Service-door</label>
         <binding>
           <command>nasal</command>
           <script>mirage2000.service_door_dialog.toggle()</script>
         </binding>
        </item>

      <item n="8">
        <label>Options</label>
        <name>options</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>options</dialog-name>
        </binding>
      </item>

      <item n="9">
        <label>Radar</label>
        <name>radar</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>radar</dialog-name>
        </binding>
      </item>
<!--      
     <item n="10">
        <label>Rwr</label>
        <binding>
          <command>nasal</command>
          <script>rwr.openDialog()</script>
        </binding>
      </item>
-->

      <item n="11">
        <label>About</label>
        <name>AboutMirage</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>about_Mirage</dialog-name>
        </binding>
      </item>

      <item n="12">
        <label>Wingmen</label>
        <name>wingmen</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>wingmen</dialog-name>
        </binding>
      </item>
      
      <item n="13">
        <label>Training</label>
        <name>training</name>
        <binding>
          <command>dialog-show</command>
          <dialog-name>scenario28</dialog-name>
        </binding>
      </item>

      <item n="14">
	<label>Quick Payload Reload</label>
	<name>payload-qs</name>
	<binding>
	  <condition>
	    <or>
	      <equals>
		<property>sim/aircraft</property>
		<value>m2000-5</value>
	      </equals>
	      <equals>
		<property>sim/aircraft</property>
		<value>m2000-5B</value>
	      </equals>
	    </or>
	  </condition>
	  <command>dialog-show</command>
	  <dialog-name>payload-5</dialog-name>
	</binding>
	<binding>
	  <condition>
	    <equals>
	      <property>sim/aircraft</property>
	      <value>m2000D</value>
	    </equals>
	  </condition>
	  <command>dialog-show</command>
	  <dialog-name>payload-d</dialog-name>
	</binding>
      </item>
      
  <item n="15">
    <label>Combat event log</label>
    <name>event-log</name>
    <binding>
      <command>dialog-show</command>
      <dialog-name>flightlog</dialog-name>
    </binding>
  </item>

    </menu>
  </default>

</PropertyList>
