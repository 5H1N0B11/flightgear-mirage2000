    <!-- ~~~~~~~~~~~~~~~~~~ windshield rain -->
    <rain_ext>
            <name>rain_ext</name>
            <mode>looped</mode>
            <path>Aircraft/Mirage-2000/Sounds/rain.wav</path>
            <condition>
                <not>
                    <property>sim/current-view/internal</property>
                </not>
                <greater-than>
                    <property>/environment/rain-norm</property>
                    <value>0</value>
                </greater-than>
            </condition>
            <volume>
                <property>/environment/rain-norm</property>
                <factor>0.40</factor>
            </volume>
      </rain_ext>
      <rain_int1>
            <name>rain_int1</name>
            <mode>looped</mode>
            <path>Aircraft/Mirage-2000/Sounds/rain.wav</path>
            <type>avionics</type>
            <condition>
                <property>sim/current-view/internal</property>
                <greater-than>
                    <property>/environment/rain-norm</property>
                    <value>0</value>
                </greater-than>
            </condition>
            <volume>
                <property>/environment/rain-norm</property>
                <factor>0.18</factor>
            </volume>
      </rain_int1>
      <rain_int2>
            <name>rain_int2</name>
            <mode>looped</mode>
            <path>Aircraft/Mirage-2000/Sounds/rain-windshield.wav</path>
            <type>avionics</type>
            <condition>
                <property>sim/current-view/internal</property>
                <greater-than>
                    <property>/environment/rain-norm</property>
                    <value>0</value>
                </greater-than>
            </condition>
            <volume>
                <property>velocities/airspeed-kt</property>
                <factor>0.0075</factor>
                <min>0.06</min>
                <max>0.40</max>
            </volume>
        </rain_int2>
    
    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Aircraft/Mirage-2000/Sounds/BaBoOn-mirageIV-Wind.wav</path>
      <condition>
        <not>
          <property>/sim/current-view/internal</property>
        </not>
      </condition>
      <property>/velocities/airspeed-kt</property>
      <volume>
        <property>/position/altitude-ft</property>
        <factor>-0.000015</factor>
        <offset>1.0</offset>
        <min>0.1</min>
        <max>0.7</max>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.015</factor>
        <min>0.03</min>
        <max>0.55</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
        <offset>0.75</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </wind>
    
    <rumble>
      <name>rumble</name>
      <mode>looped</mode>
      <path>Sounds/rumble.wav</path>
      <condition>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>.0005</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </rumble>

    <squeal>
      <name>squeal</name>
      <path>Aircraft/Mirage-2000/Sounds/BaBoOn-mirageIV-Tire-Squeal.wav</path>
      <condition>
        <or>
          <property>/gear/gear[0]/wow</property>
          <property>/gear/gear[1]/wow</property>
          <property>/gear/gear[2]/wow</property>
        </or>
      </condition>
      <volume>
        <property>/velocities/speed-down-fps</property>
        <factor>0.05</factor>
      </volume>
      <volume>
        <property>/velocities/airspeed-kt</property>
        <factor>0.01</factor>
      </volume>
      <volume>
        <internal>dt_stop</internal>
        <factor>0.05</factor>
        <max>1.0</max>
      </volume>
      <pitch>
        <property>/velocities/airspeed-kt</property>
        <factor>0.0025</factor>
        <offset>1.2</offset>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </squeal>

