    <gear>
      <name>gear</name>
      <mode>in-transit</mode>
      <path>Sounds/Mirage2000_gear2.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>/gear/gear[0]/position-norm</property>
            <value>0</value>
          </greater-than>
          <less-than>
            <property>/gear/gear[0]/position-norm</property>
            <value>1</value>
          </less-than>
          <equals>
            <property>/controls/engines/engine[0]/cutoff</property>
            <value>0</value>
          </equals>
        </and>
      </condition>
<!--      <pitch>
        <internal>dt_play</internal>
        <offset>1.0</offset>
        <factor>1</factor>
      </pitch>-->
      <volume>
        <property>/gear/gear[0]/position-norm</property>
        <factor>5.0</factor>
        <min>5.0</min>
        <max>5.0</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>
    
    <gear>
      <name>gear-open-door</name>
     <!-- <mode>in-transit</mode>-->
      <path>Sounds/Mirage2000_Open_gear_Door.wav</path>
      <condition>
        <and>
          <greater-than>
            <property>/gear/gear[0]/position-norm</property>
            <value>0</value>
          </greater-than>
          <less-than>
            <property>/gear/gear[0]/position-norm</property>
            <value>1</value>
          </less-than>
          <equals>
            <property>/controls/engines/engine[0]/cutoff</property>
            <value>0</value>
          </equals>
        </and>
      </condition>
      <volume>
        <property>/gear/gear[0]/position-norm</property>
        <factor>5.0</factor>
        <min>5.0</min>
        <max>5.0</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </gear>
    

    <gear>
      <name>gear-close-door</name>
      <path>Sounds/Mirage2000_Close_gear_Door.wav</path>
      <condition>
        <or>
          <less-than>
            <property>/gear/gear[0]/position-norm</property>
            <value>0.1</value>
          </less-than>
          <greater-than>
            <property>/gear/gear[0]/position-norm</property>
            <value>0.9</value>
          </greater-than>
        </or>
      </condition>
      <volume>
        <property>/gear/gear[0]/position-norm</property>
