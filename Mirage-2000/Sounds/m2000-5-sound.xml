    <!-- ~~~~~~~~~~~~~~~~~~ engine - start -->
    <engine>
      <name>engine-start</name>
      <mode>once</mode>
      <path>Sounds/Mirage2000_Starting_Engine_OutsideV3.wav</path>
      <condition>
        <property>/controls/engines/engine[0]/starter</property>
      </condition>
      <orientation>
        <x>1.0</x>
        <y>0.0</y>
        <z>0.0</z>
        <inner-angle>30.0</inner-angle>
        <outer-angle>330.0</outer-angle>
        <outer-gain>0.1</outer-gain>
      </orientation>
<!--      <volume>
        <property>engines/engine[0]/thrust-lbs</property>
        <factor>0.000012</factor>
        <min>0.1</min>
        <max>0.2</max>
      </volume>-->
      <volume>
        <property>engines/engine/n1</property>
        <offset>1.0</offset>
        <factor>-0.008</factor>
        <max>1</max>
      </volume>
      
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>

    <!-- ~~~~~~~~~~~~~~~~~~ engine - stop -->
    <engine>
      <name>engine-shutdown</name>
      <mode>once</mode>
      <path>Sounds/turbine_shutdown.wav</path>
      <condition>
        <and>
          <property>/controls/engines/engine[0]/cutoff</property>
          <greater-than>
            <property>/controls/engines/engine[0]/n1</property>
            <value>0</value>
          </greater-than>
        </and>
      </condition>
      <volume>
        <factor>0.2</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>

