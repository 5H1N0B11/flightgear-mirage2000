        <factor>1</factor>
        <offset>0.3</offset>
      </pitch>
      <volume>
        <property>engines/engine[0]/afterburner</property>
        <factor>1.2</factor>
        <offset>0.15</offset>
      </volume>
    </engine-rumble>
    
    <!-- ~~~~~~~~~~~~~~~~~~ whine external -->
